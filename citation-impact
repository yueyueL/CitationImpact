#!/usr/bin/env python3
"""
Citation Impact Analyzer - Executable Script

This is an executable wrapper for the Citation Impact Analyzer.
Make it executable with: chmod +x citation-impact
Then run: ./citation-impact
"""

import sys
import os

# Add the project root to the Python path
project_root = os.path.dirname(os.path.abspath(__file__))
sys.path.insert(0, project_root)

try:
    from citationimpact.ui.terminal_ui import main
    main()
except ImportError as e:
    print("\n" + "="*70)
    print("ERROR: Required dependencies not installed!")
    print("="*70)
    print(f"\nDetails: {e}")
    print("\nPlease install dependencies first:")
    print(f"\n  cd {project_root}")
    print("  pip install -r requirements.txt")
    print("\n" + "="*70 + "\n")
    sys.exit(1)
except KeyboardInterrupt:
    print("\n\nExiting... Goodbye! ðŸ‘‹\n")
    sys.exit(0)
except Exception as e:
    print("\n" + "="*70)
    print("UNEXPECTED ERROR!")
    print("="*70)
    print(f"\n{type(e).__name__}: {e}")
    print("\nPlease report this issue if it persists.")
    print("="*70 + "\n")
    sys.exit(1)
